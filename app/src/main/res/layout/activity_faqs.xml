<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_file"
    tools:context=".faqs">

    <ImageView
        android:id="@+id/imageViewAsk"
        android:layout_width="81dp"
        android:layout_height="84dp"
        android:src="@drawable/ask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:fontFamily="times new roman"
        android:gravity="center"
        android:padding="16dp"
        android:text="FAQs"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <!-- ScrollView for FAQs -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintBottom_toTopOf="@id/searchBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LinearLayout for FAQ items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/right" />
            <!-- FAQ items -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-55dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/faq_item_background"
                android:text="What is luggage tracking?"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luggage tracking is a feature that allows users to track the location of their luggage during travel using various technologies like GPS, RFID, or Bluetooth."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_color"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How accurate is the luggage tracking technology?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="-55dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/faq_item_background"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The accuracy of luggage tracking technology can vary depending on the specific technology used, environmental factors, and the quality of the tracking device. In general, GPS-based tracking tends to be more accurate outdoors, while RFID or Bluetooth-based tracking may offer better accuracy indoors."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_color"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can I track my luggage if it's lost or stolen?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="-55dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/faq_item_background"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luggage tracking technology can help you locate your luggage if it's misplaced or lost during travel. However, if your luggage is stolen, it's essential to report the theft to the authorities and provide them with any tracking information available."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_color"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are there any subscription fees for using the luggage tracking service?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="-55dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/faq_item_background"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some luggage tracking services may require a subscription fee for access to certain features or for ongoing tracking services. However, many tracking devices offer basic tracking capabilities without additional fees."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_color"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/right" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Can I track my luggage in real-time?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="-55dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/faq_item_background"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, many luggage tracking systems provide real-time tracking capabilities, allowing you to monitor the location of your luggage continuously through a smartphone app or web interface."

                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"/>

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_color"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


        </LinearLayout>
    </ScrollView>

    <!-- Search Box -->
    <LinearLayout
        android:id="@+id/searchBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:background="@drawable/faq_item_background"
        android:layout_marginTop="20dp">

        <!-- EditText for asking a question -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask a question..."
            android:padding="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- ImageButton for searching -->
        <Button
            android:id="@+id/imageButtonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Search"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_search_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

