<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_file">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LuggageEntries">

        <!-- Text: Don't worry, your bag will be safe and sound! -->
        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry, your bag will be safe and sound!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:textColor = "#0B0A0A"/>

        <!-- Form -->

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/textViewMessage"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/divider" />

        <EditText
            android:id="@+id/editTextUserID"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:layout_below="@id/textViewMessage"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:hint="  User ID"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_centerHorizontal = "true"/>

        <EditText
            android:id="@+id/editTextCompanyName"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="  Company Name"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_marginLeft="90dp"
            android:layout_below="@id/editTextUserID"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:layout_centerHorizontal = "true"
            />

        <EditText
            android:id="@+id/editTextColour"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="  Colour"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/editTextCompanyName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:layout_centerHorizontal = "true"
            />

        <EditText
            android:id="@+id/editTextCapacity"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="  Capacity"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/editTextColour"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:layout_centerHorizontal = "true"
            />

        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="  Height"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/editTextCapacity"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:layout_centerHorizontal = "true"
            />

        <EditText
            android:id="@+id/editTextWidth"
            android:layout_width="301dp"
            android:layout_height="40dp"
            android:hint="  Width"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/editTextHeight"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordered_text"
            android:layout_centerHorizontal = "true"
            />


        <!-- Submit Button -->

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:background="@drawable/button"
            android:text="Submit"
            android:textColor="@color/black"
            android:backgroundTint="@null"
            android:layout_below="@id/editTextWidth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/imageViewSuitcase"
            android:layout_width="350dp"
            android:layout_height="169dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="547dp"
            android:layout_marginEnd="-81dp"
            android:src="@drawable/trainticket" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>